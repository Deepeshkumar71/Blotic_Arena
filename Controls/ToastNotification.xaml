<UserControl x:Class="BloticArena.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400"
             Height="Auto">
    <Border x:Name="ToastBorder"
            Background="#1F2937"
            BorderBrush="#374151"
            BorderThickness="1"
            CornerRadius="12"
            Padding="16"
            Opacity="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="4" 
                              BlurRadius="20" 
                              Opacity="0.5"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Icon -->
            <Border Grid.Column="0"
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#3B82F6"
                    Margin="0,0,12,0"
                    x:Name="IconBorder">
                <TextBlock x:Name="IconText"
                           Text="ℹ️"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Text="Notification"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,4"/>
                <TextBlock x:Name="MessageText"
                           Text="This is a notification message"
                           FontSize="12"
                           Foreground="#9CA3AF"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Close Button -->
            <Button Grid.Column="2"
                    Width="24"
                    Height="24"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CloseButton_Click"
                    VerticalAlignment="Top">
                <TextBlock Text="✕"
                           FontSize="16"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
